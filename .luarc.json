{
    "diagnostics": {
        "disable": [
            "close-non-object",
            "incomplete-signature-doc",
            "missing-global-doc",
            "missing-local-export-doc"
        ],
        "groupFileStatus": {
            "ambiguity": "Any",
            "await": "Any",
            "duplicate": "Any",
            "global": "Any",
            "luadoc": "Any",
            "redefined": "Any",
            "strict": "Any",
            "type-check": "Any",
            "unbalanced": "Any",
            "unused": "Any"
        },
        "ignoredFiles": "Opened",
        "libraryFiles": "Opened"
    },
    "runtime": {
        "version": "Lua 5.1",
        "path": [
            "script/?.lua",
            "script/?/init.lua",
            "test/?.lua",
            "test/?/init.lua",
            "script/meta/?.lua"
        ],
        "pathStrict": true
    },
    "workspace": {
        "maxPreload": 1600,
        "preloadFileSize": 1000,
        "ignoreDir": [
            "/locale/",
            "/libs/",
            "/3rd",
            "/.vscode",
            "/meta",
	    ".internal"
        ],
        "checkThirdParty": false,
        "library": [
            "${3rd}/Defold/library",
	    ".internal"
        ]
    },
    "diagnostics.globals": [
	    "on_input",
	    "on_message",
	    "init",
	    "update",
	    "final"
	],
    "files.associations": {
            "*.script"        : "lua",
            "*.gui_script"    : "lua",
            "*.render_script" : "lua",
            "*.editor_script" : "lua"
    },
    "typeFormat": {
        "config": {
            "format_line": "false"
        }
    },
    "type": {
        "castNumberToInteger": false
    },
    "doc": {
        "privateName": [
            "_*"
        ]
    }
}
